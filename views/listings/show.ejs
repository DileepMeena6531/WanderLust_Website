<% layout("/layouts/boilerplate") %>
<div class="row col-8 offset-3 mt-3">
    <h3>Listing details</h3>
</div>
    <div class="row col-6 offset-3 mt-3 show-card">
    <div class="card">
        <img src="<%=listing.image %>" class="card-img-top show-image" alt="listing_image">
        <div class="card-body">
          <p class="card-text">
           <b> <%=listing.title%> <br></b>
            <%=listing.description%> <br>
            &#x20B9; <%=listing.price.toLocaleString("en-IN")%> <br>
            <%=listing.location%> <br>
            <%=listing.country%>
          </p>
        </div>
      </div>
    </div>

    <div class="btns">
        <a href="/listings/<%=listing.id%>/edit" class="btn btn-dark col-1 offset-3 add-btn">Edit</a>
    
    <form method="post" action="/listings/<%=listing.id %>?_method=DELETE">
        <button class="btn btn-dark offset-5">delete</button>
    </form>
    </div>
    
    
