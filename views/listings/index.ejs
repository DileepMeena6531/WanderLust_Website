<% layout("/layouts/boilerplate") %>
    <h3 class="row mt-3">All Listings</h3>
    <!-- <form method="get" action="/listings/new">
        <button>Add new list</button>
    </form> -->
    <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2">
        <% for(listing of allListing) {%>
            <a href="/listings/<%=listing.id %>" class="listing-link">
            <div class="card listing-card">
                <img src="<%=listing.image %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                    <b><%=listing.title %> <br></b>
                    &#x20B9; <%=listing.price.toLocaleString("en-IN")%>/night
                  </p>
                </div>
              </div>
            </a>
              <% }%>
    </div>
    
